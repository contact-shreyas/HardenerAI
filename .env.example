# Configuration Examples
# Copy to .env for local development

# Hardening Configuration
HARDENER_TARGET=./
HARDENER_DRY_RUN=true
HARDENER_APPLY=false
HARDENER_ENABLE_ROLLBACK=false

# Logging
LOG_LEVEL=info
VERBOSE=false

# Output directories
HARDENER_REPORTS_DIR=.hardener/reports
HARDENER_SNAPSHOTS_DIR=.hardener/snapshots

# Dashboard (Next.js)
# WARNING: UI apply is disabled by default
HARDENER_UI_APPLY=0
# Optional override for workspace root (used by dashboard API)
HARDENER_WORKSPACE=.
# Base URL for server-side fetches
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Risk thresholds
HARDENER_THRESHOLD_IGNORE=20
HARDENER_THRESHOLD_WARN=60
HARDENER_THRESHOLD_CRITICAL=80

# Scanner toggles
ENABLE_CONFIG_READER=true
ENABLE_TRIVY=false
ENABLE_KUBE_BENCH=false
ENABLE_CUSTOM_RULES=true

# Validation & Rollback
VALIDATION_ENABLED=true
VALIDATION_STRICT=false
ROLLBACK_ENABLED=false
AUTO_ROLLBACK_ON_FAILURE=false

# Third-party integrations (future)
# SLACK_WEBHOOK_URL=
# EMAIL_RECIPIENT=
# GIT_AUTO_COMMIT=false
